<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    tools:context="com.example.dupriest.comp580_bam.edit">


    <TableRow
        android:layout_height="fill_parent"
        android:layout_weight="0.3"
        android:layout_marginBottom="10dp"
        >
        <Button
            android:layout_height="match_parent"
            android:layout_width="fill_parent"
            android:layout_weight="0.3"
            android:text="&lt;"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:contentDescription="previous room"
            android:layout_marginRight="10dp"
            android:onClick="prevRoom"
            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:text="Room 1 - Name of Room"
            android:textColor="@color/white"
            android:background="@color/blue"
            android:textSize="30sp"
            android:layout_marginRight="10dp"
            />
        <Button
            android:layout_height="match_parent"
            android:layout_width="fill_parent"
            android:layout_weight="0.3"
            android:text="&gt;"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:contentDescription="next room"
            android:onClick="nextRoom"
            />
    </TableRow>

    <TableRow
        android:layout_height="fill_parent"
        android:layout_weight="0.3"
        android:layout_marginBottom="10dp"
        >
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/add"
            android:text="add"
            android:layout_weight=".3"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:background="@color/red"
            android:layout_height="fill_parent"
            android:contentDescription="add or change current room"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.3"
            android:text="Description of the room or other important info"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@color/blue"
            android:layout_marginRight="10dp"
            android:maxWidth="110dip"
            android:maxLines="4"
            />
        <Button
            android:id="@+id/save"
            android:layout_weight="0.3"
            android:layout_width="wrap_content"
            android:text="save"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:background="@color/green"
            android:layout_height="fill_parent"
            android:contentDescription="save current setup"
            />
    </TableRow>

    <TableRow
        android:layout_height="fill_parent"
        android:layout_weight="0.3"
        >
        <Button
            android:id="@+id/remove"
            android:layout_width="wrap_content"
            android:text="remove"
            android:layout_weight="0.3"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:background="@color/blue"
            android:layout_height="fill_parent"
            android:contentDescription="remove contents of current room"
            android:layout_marginRight="10dp"
            />
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="play"
            android:textSize="30sp"
            android:layout_weight="0.3"
            android:background="@color/black"
            android:textColor="@color/white"
            android:contentDescription="play room audio"
            android:layout_marginRight="10dp"
            />
        <Button
            android:id="@+id/back"
            android:text="back"
            android:textSize="30dp"
            android:layout_weight="0.3"
            android:textColor="@color/white"
            android:background="@color/purple"
            android:layout_height="fill_parent"
            />
    </TableRow>
</TableLayout>
