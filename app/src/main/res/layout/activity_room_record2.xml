<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_room_record2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dupriest.comp580_bam.roomRecord2">

    <TableLayout
        android:id="@+id/recordMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        >

        <TableRow
            android:layout_weight="0.5"
            android:layout_marginBottom="10dp"
            >
            <Button
                android:id="@+id/prevRecord"
                android:text="previous\nrecord"
                android:contentDescription="previous recording"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:background="@color/black"
                android:layout_marginRight="10dp"
                android:onClick="prevRecord"
                />
            <TextView
                android:id="@+id/introRoom"
                android:text="ROOM\nDESCRIPTION"
                android:gravity="center"
                android:contentDescription="room description"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@color/purple"
                android:layout_marginRight="10dp"
                />
            <Button
                android:id="@+id/next"
                android:text="next"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:background="@color/black"
                android:onClick="next"
                />
        </TableRow>

        <TableRow
            android:layout_weight="0.5"
            >
            <Button
                android:id="@+id/record"
                android:text="record"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:background="@color/green"
                android:layout_marginRight="10dp"
                android:onClick="record"
                />
            <Button
                android:id="@+id/play"
                android:text="play"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:background="@color/blue"
                android:layout_marginRight="10dp"
                android:onClick="play"
                />
            <Button
                android:id="@+id/back"
                android:text="back"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:background="@color/red"
                android:onClick="back"
                />
        </TableRow>

    </TableLayout>

    <TableLayout
        android:id="@+id/premadeMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_weight="0.5"
            android:layout_marginBottom="10dp"
            >
            <Button
                android:id="@+id/sort"
                android:text="sort\nall premade"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@color/black"
                android:layout_marginRight="10dp"
                android:onClick="sort"
                />
            <TextView
                android:id="@+id/introRoom2"
                android:text="ROOM\nDESCRIPTION"
                android:gravity="center"
                android:contentDescription="room description"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@color/purple"
                android:layout_marginRight="10dp"
                />
            <Button
                android:id="@+id/next2"
                android:text="next"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:background="@color/black"
                android:onClick="next"
                />
        </TableRow>

        <TableRow
            android:layout_weight="0.5"
            >
            <Button
                android:id="@+id/select"
                android:text="select\nempty"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@color/green"
                android:layout_marginRight="10dp"
                android:onClick="selectRoom"
                />
            <Button
                android:id="@+id/play2"
                android:text="play"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:background="@color/blue"
                android:layout_marginRight="10dp"
                android:onClick="play"
                />
            <Button
                android:id="@+id/back2"
                android:text="back"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:background="@color/red"
                android:onClick="back"
                />
        </TableRow>

    </TableLayout>

</RelativeLayout>
